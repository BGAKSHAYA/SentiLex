#!/bin/sh

TEST_FILE="data/SemEval-2013/twitter-2013test-A.txt"

for f in $@; do
    echo $f >&2
    OUT_FILE="data/SemEval-2013/twitter-2013pred-$(basename ${f%.model}).txt"
    ./scripts/nrc_canada.py test -m $f ${TEST_FILE} > ${OUT_FILE}
    ./scripts/semeval-scorers/scorer.py ${OUT_FILE} ${TEST_FILE}
done
